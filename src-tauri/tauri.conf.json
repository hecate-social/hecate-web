{
	"$schema": "https://raw.githubusercontent.com/nickvdyck/tauri-settings-schema/refs/heads/main/schemas/v2/tauri.conf.json",
	"productName": "Hecate",
	"version": "0.5.0",
	"identifier": "social.hecate.web",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:1420",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "Hecate",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600,
				"resizable": true,
				"decorations": false,
				"transparent": false
			}
		],
		"security": {
			"csp": "default-src 'self'; script-src 'self' blob:; style-src 'self' 'unsafe-inline'; connect-src 'self' hecate://localhost ipc: http://ipc.localhost; img-src 'self' asset: https://asset.localhost; media-src 'self'"
		}
	},
	"bundle": {
		"createUpdaterArtifacts": true,
		"active": true,
		"targets": ["deb", "rpm", "dmg", "app", "nsis"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"linux": {
			"deb": {
				"depends": [
					"libwebkit2gtk-4.1-0",
					"libgtk-3-0"
				],
				"section": "devel",
				"priority": "optional"
			},
			"appimage": {
				"bundleMediaFramework": false
			}
		},
		"macOS": {
			"minimumSystemVersion": "10.15"
		}
	},
	"plugins": {
		"shell": {
			"open": true
		},
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJDMTcxMURDNzk1RDQyMDEKUldRQlFsMTUzQkVYTEJxNm45MnBFdUF6RXBuNGtGY2lXQytoU0RMS0trWmlITDh3emRqSjNxMU4K",
			"endpoints": [
				"https://github.com/hecate-social/hecate-web/releases/latest/download/latest.json"
			]
		}
	}
}
